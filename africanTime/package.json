{
  "name": "afritime",
  "version": "2.0.0",
  "description": "tells time in any country in africa",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/style.scss css/style.css -w",
    "compile:sass": "node-sass sass/style.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer --autoprefixer.browsers '> 100%' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Adebayo Fawaz Ajibola",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  }
}
